<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    
    <style name="Base.Theme.RealEstateManager" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColorLight</item>
        <item name="colorSecondary">@color/secondaryColorLight</item>
        <item name="colorAccent">@color/accentColorLight</item>
        <item name="colorTertiary">@color/textColorLight</item>
        <item name="colorOnBackground">@color/backgroundColorLight</item>
        <item name="colorButtonNormal">@color/unselectButtonLight</item>
        
        <item name="android:statusBarColor">@color/backgroundColorLight</item>
        <!-- Customize your theme here. -->
        
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">
            @color/backgroundColorLight
        </item>
        <item name="android:navigationBarColor">@color/backgroundColorLight</item>
    
    </style>
    
    <style name="Theme.Go4LaunchEncore" parent="Base.Theme.RealEstateManager" />
    
