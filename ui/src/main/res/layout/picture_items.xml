<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    >
    
    <ImageView
        android:id="@+id/picture_items_ImageView_picture"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars"
        />
    
    <TextView
        android:id="@+id/picture_items_TextView_background"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:alpha="0.8"
        android:background="@color/black"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="@id/picture_items_ImageView_picture"
        app:layout_constraintEnd_toEndOf="@id/picture_items_ImageView_picture"
        app:layout_constraintStart_toStartOf="@id/picture_items_ImageView_picture"
        />
    
    <TextView
        android:id="@+id/picture_items_TextView_picture_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/picture_items_TextView_background"
        app:layout_constraintEnd_toEndOf="@id/picture_items_TextView_background"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/picture_items_TextView_background"
        app:layout_constraintTop_toTopOf="@id/picture_items_TextView_background"
        tools:text="Facade"
        />

</androidx.constraintlayout.widget.ConstraintLayout>