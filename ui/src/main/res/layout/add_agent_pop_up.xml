<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:backgroundTint="?colorOnBackground"
    app:strokeColor="?colorTertiary"
    app:strokeWidth="1dp"
    >
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        
        <TextView
            android:id="@+id/add_agent_pop_up_TextView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/agent_creation"
            android:textAlignment="center"
            android:textColor="?colorTertiary"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/add_agent_pop_up_TextInputLayout_goal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_agent_pop_up_TextView_title"
            app:placeholderTextColor="?colorTertiary"
            >
            
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/add_agent_pop_up_TextInputEditText_goal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/agent"
                android:inputType="textPersonName"
                android:textColor="?colorTertiary"
                android:textColorHint="?colorTertiary"
                android:textSize="16sp"
                />
        
        </com.google.android.material.textfield.TextInputLayout>
        
        <com.google.android.material.button.MaterialButton
            android:id="@+id/add_agent_pop_up_Button_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:backgroundTint="?colorSecondary"
            android:text="@string/create"
            android:textColor="?colorTertiary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_agent_pop_up_TextInputLayout_goal"
            />
    
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>